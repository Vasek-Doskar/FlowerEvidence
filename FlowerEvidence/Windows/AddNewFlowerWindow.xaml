<Window x:Class="FlowerEvidence.Windows.AddNewFlowerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FlowerEvidence.Windows"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Background="BlanchedAlmond"
        WindowStartupLocation="CenterOwner"
        Title="AddNewFlowerWindow" Height="250" Width="250">
    <Grid>
        <Label Content="Name:" HorizontalAlignment="Left" Margin="10,34,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="NameInput" HorizontalAlignment="Left" Margin="75,38,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="152"/>
        <Label Content="Genus:" HorizontalAlignment="Left" Margin="10,65,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="GenusInput" HorizontalAlignment="Left" Margin="75,69,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="152"/>
        <Label Content="Color:" HorizontalAlignment="Left" Margin="9,99,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="ColorInput" HorizontalAlignment="Left" Margin="75,103,0,0" VerticalAlignment="Top" Width="152">
            <ComboBoxItem Content="Blue"/>
            <ComboBoxItem Content="Red"/>
            <ComboBoxItem Content="Yellow"/>
            <ComboBoxItem Content="Purple"/>
            <ComboBoxItem Content="White"/>
            <ComboBoxItem Content="Orange"/>
            <ComboBoxItem Content="Black"/>
        </ComboBox>
        <Button Content="Save" HorizontalAlignment="Left" Margin="21,157,0,0" VerticalAlignment="Top" Width="95" Click="SaveButton_Click"/>
        <Button Content="Discard &amp; Close" HorizontalAlignment="Left" Margin="132,157,0,0" VerticalAlignment="Top" Width="95"/>

    </Grid>
</Window>
